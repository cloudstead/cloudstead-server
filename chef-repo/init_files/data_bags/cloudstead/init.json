{
    "id": "init",

    "server_tarball": "http://host/path/to/cloudstead-server.tar.gz",
    "cloudos_server_tarball": "http://host/path/to/cloudos-server.tar.gz",
    "aws_access_key": "put-access-key-here",
    "aws_secret_key": "put-secret-key-here",
    "s3_bucket": "put-bucket-name-here",
    "aws_iam_group": "put-IAM-group-here",
    "data_key": "put-data-key-here",
    "cloud_storage_user": "any-unique-name-here",
    "wildcard_cert_name": "ssl-https-wildcard",

    "do_client_id": "put-digitalocean-client-id-here",
    "do_api_key": "put-digitalocean-api-key-here",

    "rackspace_client_id": "put-rackspace-api-id-here",
    "rackspace_api_key": "put-rackspace-api-key-here",

    "mail_senders": {
        "welcome":        { "name": "no-reply", "email": "no-reply@example.com" },
        "reset_password": { "name": "no-reply", "email": "no-reply@example.com" }
    },

    "admin": {
        "email": "admin-email@example.com",
        "password": "admin-password"
    },

    "sendgrid": {
        "user": "sendgrid-api-user",
        "password": "sendgrid-api-key"
    },

    "authy": {
        "user": "authy-api-key",
        "base_uri": "authy-url"
    },

    "authy_admin": {
        "user": "admin-authy-api-key",
        "base_uri": "authy-url"
    },

    "cloudos_dns": {
        "user": "cloudos-dns-admin-user",
        "password": "cloudos-dns-admin-password"
    },

    "appstore": {
        "base_uri": "cloudos-appstore-url",
        "public": {
            "user": "appstore-public-user",
            "password": "appstore-public-password",
            "email": "public-email@example.com",
            "apps": "http://cloudstead.io/downloads/apps.json"
        },
        "cloudstead": {
            "user": "appstore-cloudstead-user",
            "password": "appstore-cloudstead-password",
            "email": "cloudstead@example.com",
            "apps": "http://cloudstead.io/downloads/apps.json"
        }
    },

    "activation": {
        "name": "cloudos-activation-code-name",
        "quantity": "how-many-to-permit",
        "expiration_days": "90"
    }
}
